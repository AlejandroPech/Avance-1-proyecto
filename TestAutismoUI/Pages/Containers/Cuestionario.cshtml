@page
@model TestAutismoUI.Pages.Containers.CuestionarioModel
@{
    ViewData["Title"] = "Cuestionario";
}
    <style>
        .button {
            width: 125px;
            height: auto;
        }
    </style>
<h1 class="text-center">Cuestionario</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col" class="col-sm-10">Preguntas</th>
            <th scope="col" class="col-sm-1">Si</th>
            <th scope="col" class="col-sm-1">No</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model._preguntas)
        {
            <tr>                
                <td>@Html.DisplayFor(x=>item.PreguntaRealizada)</td>                
                <td>
                    <div class="btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-success active">
                            <input type="checkbox" checked/>
                        </label>
                    </div>
                </td>
                <td>
                    <div class="btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-success active">
                            <input type="checkbox" checked>
                        </label>
                    </div>
                </td>                
            </tr>
        }
    </tbody>
</table>

<div class="form-group row">
    <div class="col-md-9"></div>
    <a class="btn btn-secondary m-1 button" asp-page="/Containers/Ninios">Guardar</a>
    <a class="btn btn-success m-1 button" asp-page="/Containers/Resultados">Terminar</a>
</div>